      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "eyebrow_color",
      "default": "#8B7355",
      "label": "Eyebrow color"
    },
    {
      "type": "color",
      "id": "heading_color",
      "default": "#1a1a1a",
      "label": "Heading color"
    },
    {
