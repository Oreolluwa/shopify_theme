[
  {
    "name": "theme_info",
    "theme_name": "Liquor Store Premium",
    "theme_version": "1.0.0",
    "theme_author": "Shopify Theme Developer",
    "theme_documentation_url": "https://github.com/yourusername/liquor-store-theme",
    "theme_support_url": "https://github.com/yourusername/liquor-store-theme/issues"
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "Primary Colors"
      },
      {
        "type": "color",
        "id": "colors_text",
        "default": "#000000",
        "label": "Text Color"
      },
      {
        "type": "color",
        "id": "colors_background_1",
        "default": "#FFFFFF",
        "label": "Background 1"
      },
      {
        "type": "color",
        "id": "colors_background_2",
        "default": "#F5F5F5",
        "label": "Background 2"
      },
      {
        "type": "header",
        "content": "Accent Colors"
      },
      {
        "type": "color",
        "id": "colors_accent_1",
        "default": "#D4AF37",
        "label": "Accent 1 (Gold)",
        "info": "Brand primary color"
      },
      {
        "type": "color",
        "id": "colors_accent_2",
        "default": "#000000",
        "label": "Accent 2 (Black)"
      },
      {
        "type": "header",
        "content": "Button Colors"
      },
      {
        "type": "color",
        "id": "colors_solid_button_labels",
        "default": "#FFFFFF",
        "label": "Solid button label"
      },
      {
        "type": "color",
        "id": "colors_outline_button_labels",
        "default": "#000000",
        "label": "Outline button label"
      },
      {
        "type": "header",
        "content": "Gradients (Optional)"
      },
      {
        "type": "color_background",
        "id": "gradient_background_1",
        "label": "Background gradient 1"
      },
      {
        "type": "color_background",
        "id": "gradient_background_2",
        "label": "Background gradient 2"
      },
      {
        "type": "color_background",
        "id": "gradient_accent_1",
        "label": "Accent gradient 1"
      },
      {
        "type": "color_background",
        "id": "gradient_accent_2",
        "label": "Accent gradient 2"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Headings"
      },
      {
        "type": "font_picker",
        "id": "type_header_font",
        "default": "assistant_n4",
        "label": "Heading Font",
        "info": "Used for titles and headings"
      },
      {
        "type": "range",
        "id": "heading_scale",
        "min": 100,
        "max": 150,
        "step": 5,
        "unit": "%",
        "label": "Heading scale",
        "default": 100
      },
      {
        "type": "header",
        "content": "Body Text"
      },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "default": "assistant_n4",
        "label": "Body Font",
        "info": "Used for body text"
      },
      {
        "type": "range",
        "id": "body_scale",
        "min": 100,
        "max": 130,
        "step": 5,
        "unit": "%",
        "label": "Body scale",
        "default": 100
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "range",
        "id": "page_width",
        "min": 1000,
        "max": 1600,
        "step": 100,
        "default": 1200,
        "unit": "px",
        "label": "Page width"
      },
      {
        "type": "header",
        "content": "Spacing"
      },
      {
        "type": "range",
        "id": "spacing_sections",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Space between sections",
        "default": 0
      }
    ]
  },
  {
    "name": "Social Media",
    "settings": [
      {
        "type": "header",
        "content": "Social Accounts"
      },
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook URL",
        "info": "https://facebook.com/yourpage"
      },
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram URL",
        "info": "https://instagram.com/yourpage"
      },
      {
        "type": "text",
        "id": "social_twitter_link",
        "label": "Twitter URL",
        "info": "https://twitter.com/yourpage"
      },
      {
        "type": "text",
        "id": "social_youtube_link",
        "label": "YouTube URL",
        "info": "https://youtube.com/yourchannel"
      },
      {
        "type": "text",
        "id": "social_tiktok_link",
        "label": "TikTok URL",
        "info": "https://tiktok.com/@yourpage"
      }
    ]
  },
  {
    "name": "Favicon",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon image",
        "info": "32 x 32px .png recommended"
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "select",
        "id": "cart_type",
        "options": [
          {
            "value": "drawer",
            "label": "Drawer"
          },
          {
            "value": "page",
            "label": "Page"
          }
        ],
        "default": "drawer",
        "label": "Cart type"
      },
      {
        "type": "checkbox",
        "id": "show_vendor",
        "default": false,
        "label": "Show vendor"
      },
      {
        "type": "checkbox",
        "id": "show_cart_note",
        "default": true,
        "label": "Enable cart note"
      }
    ]
  },
  {
    "name": "Search",
    "settings": [
      {
        "type": "header",
        "content": "Predictive Search"
      },
      {
        "type": "checkbox",
        "id": "predictive_search_enabled",
        "default": true,
        "label": "Enable predictive search"
      },
      {
        "type": "checkbox",
        "id": "predictive_search_show_vendor",
        "default": false,
        "label": "Show vendor"
      },
      {
        "type": "checkbox",
        "id": "predictive_search_show_price",
        "default": true,
        "label": "Show price"
      }
    ]
  },
  {
    "name": "Currency Format",
    "settings": [
      {
        "type": "header",
        "content": "Currency"
      },
      {
        "type": "paragraph",
        "content": "To customize currencies, go to your [payment settings.](/admin/settings/payments)"
      }
    ]
  }
]
