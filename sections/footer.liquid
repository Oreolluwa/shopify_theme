{% comment %}
  Premium Footer Section
  
  Features:
  - Multi-column flexible layout
  - Newsletter subscription
  - Social media with hover animations
  - Payment icons
  - Rich customization options
{% endcomment %}

{%- style -%}
  .footer {
    background-color: {{ section.settings.footer_bg_color }};
    color: {{ section.settings.footer_text_color }};
    padding: var(--spacing-2xl) 0 var(--spacing-lg);
  }

  .footer__content {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-xl);
    margin-bottom: var(--spacing-2xl);
  }

  @media screen and (min-width: 750px) {
    .footer__content {
      grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
      gap: var(--spacing-2xl);
    }
  }

  .footer__block {
    display: flex;
    flex-direction: column;
  }

  .footer__block--newsletter {
    @media screen and (min-width: 990px) {
      grid-column: span 2;
    }
  }

  .footer__heading {
    color: {{ section.settings.heading_color }};
    font-size: var(--text-base);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: var(--spacing-md);
  }

  .footer__list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .footer__link {
    color: {{ section.settings.footer_text_color }};
    text-decoration: none;
    font-size: var(--text-sm);
    transition: all var(--transition-fast);
    display: inline-block;
    position: relative;
  }

  .footer__link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background-color: {{ section.settings.link_hover_color }};
    transition: width var(--transition-base);
  }

  .footer__link:hover {
    color: {{ section.settings.link_hover_color }};
  }

  .footer__link:hover::after {
    width: 100%;
  }

  /* Newsletter */
  .footer__newsletter-text {
    font-size: var(--text-sm);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--spacing-md);
    opacity: 0.9;
  }

  .footer__newsletter-form {
    display: flex;
    gap: var(--spacing-sm);
    max-width: 500px;
  }

  .footer__newsletter-input {
    flex: 1;
    padding: var(--spacing-sm) var(--spacing-md);
    border: 1px solid {{ section.settings.input_border_color }};
    background-color: {{ section.settings.input_bg_color }};
    color: {{ section.settings.footer_text_color }};
    font-size: var(--text-sm);
    transition: all var(--transition-fast);
  }

  .footer__newsletter-input:focus {
    outline: none;
    border-color: {{ section.settings.link_hover_color }};
  }

  .footer__newsletter-input::placeholder {
    color: {{ section.settings.footer_text_color }};
    opacity: 0.5;
  }

  .footer__newsletter-button {
    padding: var(--spacing-sm) var(--spacing-lg);
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    border: none;
    font-size: var(--text-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    cursor: pointer;
    transition: all var(--transition-base);
    white-space: nowrap;
  }

  .footer__newsletter-button:hover {
    background-color: {{ section.settings.button_hover_color }};
    transform: translateY(-2px);
  }

  .footer__newsletter-button:focus {
    outline: 2px solid {{ section.settings.link_hover_color }};
    outline-offset: 2px;
  }

  /* Social */
  .footer__social {
    display: flex;
    gap: var(--spacing-md);
    margin-top: var(--spacing-md);
  }

  .footer__social-link {
    color: {{ section.settings.footer_text_color }};
    transition: all var(--transition-base);
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border: 1px solid {{ section.settings.footer_text_color }};
    border-radius: 50%;
  }

  .footer__social-link:hover {
    color: {{ section.settings.link_hover_color }};
    border-color: {{ section.settings.link_hover_color }};
    transform: translateY(-3px);
  }

  .footer__social-link svg {
    width: 20px;
    height: 20px;
  }

  /* Bottom */
  .footer__bottom {
    border-top: 1px solid {{ section.settings.border_color }};
    padding-top: var(--spacing-lg);
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    align-items: center;
    text-align: center;
  }

  @media screen and (min-width: 750px) {
    .footer__bottom {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
    }
  }

  .footer__copyright {
    color: {{ section.settings.footer_text_color }};
    font-size: var(--text-xs);
    opacity: 0.7;
  }

  .footer__payment {
    display: flex;
    gap: var(--spacing-sm);
    align-items: center;
  }

  .footer__payment-icon {
    height: 24px;
    width: auto;
    opacity: 0.7;
    transition: opacity var(--transition-fast);
  }

  .footer__payment-icon:hover {
    opacity: 1;
  }

  .footer__text {
    font-size: var(--text-sm);
    line-height: var(--leading-relaxed);
    opacity: 0.9;
  }
{%- endstyle -%}

<footer class="footer">
  <div class="page-width">
    <div class="footer__content">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'link_list' -%}
            <div class="footer__block" {{ block.shopify_attributes }}>
              {%- if block.settings.heading != blank -%}
                <h3 class="footer__heading">{{ block.settings.heading }}</h3>
              {%- endif -%}
              {%- if block.settings.menu != blank -%}
                <ul class="footer__list">
                  {%- for link in block.settings.menu.links -%}
                    <li>
                      <a href="{{ link.url }}" class="footer__link">{{ link.title }}</a>
                    </li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}
            </div>

          {%- when 'text' -%}
            <div class="footer__block" {{ block.shopify_attributes }}>
              {%- if block.settings.heading != blank -%}
                <h3 class="footer__heading">{{ block.settings.heading }}</h3>
              {%- endif -%}
              {%- if block.settings.subtext != blank -%}
                <div class="footer__text">{{ block.settings.subtext }}</div>
              {%- endif -%}
              {%- if block.settings.show_social -%}
                <div class="footer__social">
                  {%- if settings.social_facebook_link != blank -%}
                    <a href="{{ settings.social_facebook_link }}" class="footer__social-link" target="_blank" rel="noopener" aria-label="Facebook">
                      {% render 'icon-facebook' %}
                    </a>
                  {%- endif -%}
                  {%- if settings.social_instagram_link != blank -%}
                    <a href="{{ settings.social_instagram_link }}" class="footer__social-link" target="_blank" rel="noopener" aria-label="Instagram">
                      {% render 'icon-instagram' %}
                    </a>
                  {%- endif -%}
                  {%- if settings.social_twitter_link != blank -%}
                    <a href="{{ settings.social_twitter_link }}" class="footer__social-link" target="_blank" rel="noopener" aria-label="Twitter">
                      {% render 'icon-twitter' %}
                    </a>
                  {%- endif -%}
                </div>
              {%- endif -%}
            </div>

          {%- when 'newsletter' -%}
            <div class="footer__block footer__block--newsletter" {{ block.shopify_attributes }}>
              {%- if block.settings.heading != blank -%}
                <h3 class="footer__heading">{{ block.settings.heading }}</h3>
              {%- endif -%}
              {%- if block.settings.subtext != blank -%}
                <p class="footer__newsletter-text">{{ block.settings.subtext }}</p>
              {%- endif -%}
              <form method="post" action="/contact#contact_form" class="footer__newsletter-form">
                <input type="hidden" name="contact[tags]" value="newsletter">
                <input type="email" 
                       name="contact[email]" 
                       class="footer__newsletter-input"
                       placeholder="{{ block.settings.placeholder | default: 'Enter your email' }}"
                       required>
                <button type="submit" class="footer__newsletter-button">
                  {{ block.settings.button_label | default: 'Subscribe' }}
                </button>
              </form>
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>

    <div class="footer__bottom">
      <p class="footer__copyright">
        &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.
      </p>
      {%- if section.settings.show_payment_icons -%}
        <div class="footer__payment">
          {% render 'icon-payment' %}
        </div>
      {%- endif -%}
    </div>
  </div>
</footer>

